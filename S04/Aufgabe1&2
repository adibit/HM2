import numpy as np

'''INPUT'''
x = np.array([0, 2500, 5000, 10000])
y = np.array([1013, 747, 540, 226])
'''INPUT'''


def lagrange_int(x, y, x_int):
    n = x.size
    y_int = 0
    for i in range(n):
        l = 1
        for j in range(n):
            if i == j:
                continue
            l *= (x_int - x[j]) / (x[i] - x[j])
        print(f'l{i}: {l}')
        y_int += y[i] * l
    return y_int


print(lagrange_int(x, y, 3750))